<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/centerPoint"
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/topLeftButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignEnd="@id/centerPoint"
        android:layout_alignBottom="@id/centerPoint"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_marginStart="0px"
        android:layout_marginTop="0px"
        android:layout_marginEnd="0px"
        android:layout_marginBottom="0px"
        android:padding="0px"
        android:stateListAnimator="@null"
        android:text="Sett" />


    <Button
        android:id="@+id/topRightButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignStart="@id/centerPoint"
        android:layout_alignBottom="@id/centerPoint"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_margin="0px"
        android:padding="0px"
        android:stateListAnimator="@null"
        android:text="T=1" />

    <Button
        android:id="@+id/bottomRightButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignStart="@id/centerPoint"
        android:layout_alignTop="@id/centerPoint"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="0px"
        android:layout_marginTop="0px"
        android:layout_marginEnd="0px"
        android:layout_marginBottom="0px"
        android:padding="0px"
        android:stateListAnimator="@null"
        android:text="T=2,x" />

    <Button
        android:id="@+id/bottomLeftButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignTop="@id/centerPoint"
        android:layout_alignEnd="@id/centerPoint"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="0px"
        android:layout_marginTop="0px"
        android:layout_marginEnd="0px"
        android:layout_marginBottom="0px"
        android:padding="0px"
        android:stateListAnimator="@null"
        android:text="Other" />

    <Button
        android:id="@+id/centerButton"
        android:layout_width="170px"
        android:layout_height="170px"
        android:layout_centerInParent="true"
        android:layout_marginStart="0px"
        android:layout_marginTop="0px"
        android:layout_marginEnd="0px"
        android:layout_marginBottom="0px"
        android:backgroundTint="@color/white"
        android:padding="0px"
        android:stateListAnimator="@null"
        android:text="T=?"
        android:translationZ="2dp" />

</RelativeLayout>